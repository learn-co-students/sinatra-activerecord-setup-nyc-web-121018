gem 'thin'
gem 'require_all'
## added the following:
gem 'activerecord', '4.2.5'
gem 'sinatra-activerecord'
gem 'rake'


group :development do
	gem 'shotgun'
	gem 'pry'
	## added:
	gem 'tux'
	gem 'sqlite3'
end

group :test do
  gem 'rspec'
  gem 'capybara'
  gem 'rack-test'
end
